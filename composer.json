{
    "name": "joachim-n/drupal-core-development-project",
    "description": "Composer project for developing Drupal core",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "name": "drupal/gcontent_moderation",
            "type": "vcs",
            "url": "https://git.drupalcode.org/issue/gcontent_moderation-3309542.git"
        },
        {
            "type": "path",
            "url": "repos/drupal",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "repos/drupal/core"
        },
        {
            "type": "path",
            "url": "repos/drupal/composer/Metapackage/CoreRecommended"
        },
        {
            "type": "path",
            "url": "repos/drupal/composer/Metapackage/DevDependencies"
        },
        {
            "type": "path",
            "url": "repos/drupal/composer/Plugin/ProjectMessage"
        },
        {
            "type": "path",
            "url": "repos/drupal/composer/Plugin/VendorHardening"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9 | ^2",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.4",
        "drupal/coder": "^8.3",
        "drupal/core": "*",
        "drupal/core-composer-scaffold": "*",
        "drupal/core-dev": "*",
        "drupal/core-recommended": "*",
        "drupal/drupal": "*",
        "drupal/entitygroupfield": "^2.0@alpha",
        "drupal/gcontent_moderation": "dev-3309542-is-group-content#0ac9b12b",
        "drupal/group": "^2",
        "drupal/paragraphs": "^1.15",
        "drupal/save_edit": "^1.5",
        "drush/drush": "^11.x-dev",
        "joachim-n/composer-manifest": "^1.1",
        "phpspec/prophecy-phpunit": "*",
        "symfony/var-dumper": "^5.4 | ^6.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-project-message": true,
            "drupal/core-vendor-hardening": true,
            "drupal/core-composer-scaffold": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "joachim-n/composer-manifest": true,
            "simplesamlphp/composer-module-installer": true,
            "cweagans/composer-patches": true
        }
    },
    "scripts": {
        "install-codestandards": [
            "PHPCSStandards\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "php-stan": [
            "./vendor/bin/phpstan"
        ],
        "phpcs": [
            "./vendor/bin/phpcs"
        ],
        "phpcbf": [
            "./vendor/bin/phpcbf"
        ],
        "post-install-cmd": [
             "@install-codestandards"
        ],
        "post-root-package-install": [
            "DrupalGitCloneProject\\ComposerScripts::postRootPackageInstall"
        ],
        "post-drupal-scaffold-cmd": [
            "DrupalGitCloneProject\\ComposerScripts::postDrupalScaffold"
        ]
    },
    "autoload": {
        "psr-4": {
            "DrupalGitCloneProject\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Composer\\": "repos/drupal/composer"
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/core/phpunit.xml": "assets/phpunit.xml"
            }
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches-file": "composer.patches.json",
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        }
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
